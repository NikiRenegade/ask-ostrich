{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Routes": {
    "security_route": {
      "ClusterId": "security_cluster",
      "Match": { "Path": "/api/security/{**catch-all}" },
      "Transforms": [{ "PathRemovePrefix": "/api/security" }]
    },
    "survey_manage_route": {
      "ClusterId": "survey_manage_cluster",
      "Match": { "Path": "/api/survey-manage/{**catch-all}" },
      "Transforms": [{ "PathRemovePrefix": "/api/survey-manage" }]
    },
    "survey_response_route": {
      "ClusterId": "survey_response_cluster",
      "Match": { "Path": "/api/survey-response/{**catch-all}" },
      "Transforms": [{ "PathRemovePrefix": "/api/survey-response" }]
    }
  },
  "Clusters": {
    "security_cluster": {
      "Destinations": {
        "security_api": { "Address": "http://security_service:8080/" }
      }
    },
    "survey_manage_cluster": {
      "Destinations": {
        "survey_manage_api": { "Address": "http://survey_manage_service:8080/" }
      }
    },
    "survey_response_cluster": {
      "Destinations": {
        "survey_response_api": { "Address": "http://survey_response_service:8080/" }
      }
    }
  }
}
